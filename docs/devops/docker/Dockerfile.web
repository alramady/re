_# Dockerfile for Munsiq Web App (Next.js)

# ---- Base Stage ----
FROM node:20-alpine AS base
WORKDIR /usr/src/app
RUN npm install -g pnpm

# ---- Dependencies Stage ----
FROM base AS dependencies
COPY package.json pnpm-lock.yaml ./
RUN pnpm fetch
RUN pnpm install --prod --frozen-lockfile

# ---- Build Stage ----
FROM base AS build
COPY package.json pnpm-lock.yaml ./
RUN pnpm install --frozen-lockfile
COPY . .
# Assuming a monorepo structure (e.g., Turborepo)
RUN pnpm --filter web build

# ---- Production Stage ----
FROM base AS production
ENV NODE_ENV=production

# Copy production dependencies
COPY --from=dependencies /usr/src/app/node_modules ./node_modules

# Copy Next.js standalone output
# This assumes outputting a standalone build for smaller image size
COPY --from=build /usr/src/app/apps/web/.next/standalone ./
COPY --from=build /usr/src/app/apps/web/.next/static ./.next/static
COPY --from=build /usr/src/app/apps/web/public ./public

# Expose port and define command
EXPOSE 3000
CMD [ "node", "server.js" ]
